<h2>Your uneaten burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{>burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>
<h2>Your devoured burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
<form class = "create-form">
  <label for = "burgerName">Burger:</label>
  <input type = "text" id = "burgerName" name = "name">
  <button type = "submit">Add burger</button>
</form>
